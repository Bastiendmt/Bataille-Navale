def sauvegardePartie(maFlotte,saFlotte):
    fl=open('sauvegarde.bin','w')
    maflottestr=str(maFlotte)
    saflottestr=str(saFlotte)
    fl.writelines(maflottestr)
    fl.write('\n')  ##passe sur une deuxieme ligne
    fl.write(saflottestr)
    fl.close()


